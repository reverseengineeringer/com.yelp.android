                <com.yelp.android.ui.widgets.YelpToggleButton android:id="@id/auto_friend_fb_toggle_button" android:background="@drawable/switch_toggle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textOn="@string/on" android:textOff="@string/off" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
            </RelativeLayout>
            <View android:background="@color/gray_light_stroke" android:layout_width="fill_parent" android:layout_height="@dimen/separator_line_width" />
        </LinearLayout>
        <RelativeLayout android:id="@id/add_all_friends_view" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/auto_friend_fb_view_with_separators" android:layout_alignParentLeft="true">
            <Button android:textAppearance="@style/DeprecatedStandardGrayText" android:id="@id/add_all_friends_button" android:background="@drawable/white_rounded_rect" android:paddingLeft="@dimen/default_large_gap_size" android:paddingRight="@dimen/default_large_gap_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/default_base_gap_size" android:text="@string/add_all" android:layout_alignParentRight="true" style="@style/FullBleedButton" />
            <TextView android:textAppearance="@style/DeprecatedHeadlineDarkText" android:id="@id/add_all_friends_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_base_gap_size" android:text="@string/friends_in_your_contacts" android:layout_alignBottom="@id/add_all_friends_button" android:layout_alignParentLeft="true" />
        </RelativeLayout>
    </RelativeLayout>
    <com.yelp.android.ui.util.ScrollToLoadListView android:id="@android:id/list" android:clipToPadding="false" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/find_friends_list_header" style="?listViewStyle" />
    <TextView android:textAppearance="@style/TitleText" android:gravity="center" android:id="@id/no_results_view" android:padding="@dimen/default_large_gap_size" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/no_friends_found" />
</RelativeLayout>