<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/yelp_fragment_container" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ViewFlipper android:gravity="center" android:id="@id/empty_view" android:padding="20.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/find_friends_list_header">
        <TextView android:textAppearance="@style/TitleText" android:id="@id/empty_view_invites_sent" android:background="@color/white" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent" />
        <include android:id="@id/empty_view_fb" android:layout_width="fill_parent" android:layout_height="fill_parent" layout="@layout/panel_invite_facebook_friends_cell" />
    </ViewFlipper>
    <TextView android:textAppearance="@style/LargeBoldWhiteText" android:gravity="center" android:id="@id/friend_request_sent_background" android:background="@color/green_accept_bottom_gradient_active" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="@dimen/clickable_size" android:text="@string/friends_request_sent" />
    <RelativeLayout android:id="@id/find_friends_list_header" android:background="@color/white_dirty_snow" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@id/auto_friend_fb_view_with_separators" android:paddingTop="@dimen/default_large_gap_size" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <View android:id="@id/separator_top" android:background="@color/gray_light_stroke" android:layout_width="fill_parent" android:layout_height="@dimen/separator_line_width" />
            <RelativeLayout android:id="@id/auto_friend_fb_view" android:background="@color/white" android:padding="@dimen/default_base_gap_size" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageView android:id="@id/facebook_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/find_friends_facebook" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:contentDescription="@null" />
