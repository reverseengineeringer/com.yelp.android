        <View android:id="@id/divider" android:background="@color/gray_silver_divider" android:layout_width="fill_parent" android:layout_height="@dimen/separator_line_width" android:layout_below="@id/review_text" />
        <ImageView android:id="@id/bookmark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_base_gap_size" android:layout_marginRight="@dimen/default_base_gap_size" android:src="@drawable/bookmark_hollow" android:layout_below="@id/divider" android:layout_alignParentRight="true" android:contentDescription="@string/action_bookmark" />
    </RelativeLayout>
</FrameLayout>