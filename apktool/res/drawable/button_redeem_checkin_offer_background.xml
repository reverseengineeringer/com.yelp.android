<?xml version="1.0" encoding="utf-8"?>
<selector android:dither="false" android:constantSize="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:topLeftRadius="@dimen/corner_radius" android:topRightRadius="@dimen/corner_radius" android:bottomLeftRadius="@dimen/corner_radius" android:bottomRightRadius="@dimen/corner_radius" />
            <gradient android:startColor="@color/blue_checkin_offer_stroke" android:endColor="@color/blue_checkin_offer_top" android:type="sweep" android:centerX="0.0" />
            <stroke android:width="1.0px" android:color="@color/blue_checkin_offer_stroke" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:topLeftRadius="@dimen/corner_radius" android:topRightRadius="@dimen/corner_radius" android:bottomLeftRadius="@dimen/corner_radius" android:bottomRightRadius="@dimen/corner_radius" />
            <gradient android:startColor="@color/blue_checkin_offer_pressed_top" android:endColor="@color/blue_checkin_offer_pressed_bottom" android:angle="@integer/gradient_start_top" />
            <stroke android:width="1.0px" android:color="@color/blue_checkin_offer_stroke" />
        </shape>
    </item>
</selector>