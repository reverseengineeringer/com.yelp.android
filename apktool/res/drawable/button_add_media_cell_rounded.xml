<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/corner_radius" />
            <solid android:color="@color/gray_stroke" />
            <stroke android:width="@dimen/border" android:color="@color/gray_mid_light" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/corner_radius" />
            <solid android:color="@color/gray_button_bar_pressed_color_bottom" />
            <stroke android:width="@dimen/border" android:color="@color/gray_yoni" />
        </shape>
    </item>
</selector>