<?xml version="1.0" encoding="utf-8"?>
<selector android:dither="false" android:constantSize="true"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:yelp="http://schemas.android.com/apk/res-auto">
    <item android:state_checked="true" yelp:state_left="true">
        <layer-list android:opacity="translucent">
            <item android:right="1.0px">
                <shape android:shape="rectangle">
                    <solid android:color="@color/blue_sky" />
                    <corners android:topLeftRadius="@dimen/corner_radius" android:topRightRadius="0.0dip" android:bottomLeftRadius="@dimen/left_button_bottom_left_radius_corner" android:bottomRightRadius="@dimen/left_button_bottom_right_radius_corner" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item yelp:state_left="true">
        <layer-list android:opacity="translucent">
            <item android:right="1.0px">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                    <corners android:topLeftRadius="@dimen/corner_radius" android:topRightRadius="0.0dip" android:bottomLeftRadius="@dimen/left_button_bottom_left_radius_corner" android:bottomRightRadius="@dimen/left_button_bottom_right_radius_corner" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true" yelp:state_right="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_sky" />
            <corners android:topLeftRadius="0.0dip" android:topRightRadius="@dimen/corner_radius" android:bottomLeftRadius="@dimen/right_button_bottom_left_radius_corner" android:bottomRightRadius="@dimen/right_button_bottom_right_radius_corner" />
        </shape>
    </item>
    <item yelp:state_right="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:topLeftRadius="0.0dip" android:topRightRadius="@dimen/corner_radius" android:bottomLeftRadius="@dimen/right_button_bottom_left_radius_corner" android:bottomRightRadius="@dimen/right_button_bottom_right_radius_corner" />
        </shape>
    </item>
    <item android:state_checked="true" yelp:state_middle="true">
        <layer-list android:opacity="translucent">
            <item android:right="1.0px">
                <shape android:shape="rectangle">
                    <solid android:color="@color/blue_sky" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item yelp:state_middle="true">
        <layer-list android:opacity="translucent">
            <item android:right="1.0px">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>