<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/border" android:color="@color/green_line_sign_in_button_pressed" />
            <corners android:radius="@dimen/corner_radius" />
            <solid android:color="@color/green_line_sign_in_button_pressed" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/border" android:color="@color/green_line_sign_in_button_unpressed" />
            <corners android:radius="@dimen/corner_radius" />
            <solid android:color="@color/green_line_sign_in_button_unpressed" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/border" android:color="@color/green_line_sign_in_button_unpressed" />
            <corners android:radius="@dimen/corner_radius" />
            <solid android:color="@color/green_line_sign_in_button_unpressed" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/border" android:color="@color/green_line_sign_in_button_unpressed" />
            <corners android:radius="@dimen/corner_radius" />
            <solid android:color="@color/green_line_sign_in_button_unpressed" />
        </shape>
    </item>
</selector>