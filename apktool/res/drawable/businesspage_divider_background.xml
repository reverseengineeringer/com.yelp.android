<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_stroke_depressed" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_stroke_depressed" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray_bubble_border" />
                </shape>
            </item>
            <item android:top="1.0px" android:bottom="1.0px">
                <shape android:shape="rectangle">
                    <gradient android:startColor="@android:color/white" android:endColor="@color/gray_businesspage_button_inactive_gradient_end" android:angle="@integer/gradient_start_top" />
                </shape>
            </item>
            <item android:top="@dimen/businesspage_header_cell_top_spacing" android:bottom="@dimen/businesspage_header_cell_bar_bottom_spacing">
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray_light_stroke" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>