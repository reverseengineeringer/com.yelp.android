<?xml version="1.0" encoding="utf-8"?>
<selector android:dither="false" android:constantSize="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/gray_stroke" />
                    <padding android:top="@dimen/separator_line_width" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/white_dirty_snow" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/gray_stroke" />
                    <padding android:top="@dimen/separator_line_width" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/gray_cell" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>