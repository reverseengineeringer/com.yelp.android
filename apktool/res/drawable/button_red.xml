<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius" />
            <stroke android:width="@dimen/border" android:color="@color/red_yelp_stroke" />
            <gradient android:startColor="@color/red_lava" android:endColor="@color/red_orange" android:angle="@integer/gradient_start_bottom" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius" />
            <stroke android:width="@dimen/border" android:color="@color/red_yelp_stroke" />
            <gradient android:startColor="@color/red_chili" android:endColor="@color/red_apple" android:angle="@integer/gradient_start_bottom" />
        </shape>
    </item>
</selector>