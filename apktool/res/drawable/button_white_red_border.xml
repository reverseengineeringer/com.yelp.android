<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/corner_radius" />
            <gradient android:startColor="@color/white_button_bottom_pressed" android:endColor="@color/white_button_top_pressed" android:angle="@integer/gradient_start_bottom" />
            <stroke android:width="@dimen/border" android:color="@color/red_yelp_stroke" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/corner_radius" />
            <gradient android:startColor="@color/white_button_bottom_pressed" android:endColor="@color/white_button_top_pressed" android:angle="@integer/gradient_start_bottom" />
            <stroke android:width="@dimen/border" android:color="@color/red_yelp_stroke" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/corner_radius" />
            <gradient android:startColor="@color/white_dirty_snow" android:endColor="@color/white" android:angle="@integer/gradient_start_bottom" />
            <stroke android:width="@dimen/border" android:color="@color/red_yelp_stroke" />
        </shape>
    </item>
</selector>