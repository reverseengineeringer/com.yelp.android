<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/gray_stroke" />
                </shape>
            </item>
            <item android:top="@dimen/separator_line_width" android:bottom="@dimen/separator_line_width">
                <shape>
                    <solid android:color="@color/gray_cell" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:drawable="@drawable/search_filter_background" />
</selector>