<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:yelp="http://schemas.android.com/apk/res/com.yelp.android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray_stroke_depressed" />
                </shape>
            </item>
            <item android:top="@dimen/border" android:bottom="@dimen/border">
                <shape android:shape="rectangle">
                    <gradient android:startColor="@color/gray_mid_light" android:endColor="@color/gray_light_silver_divider" android:angle="@integer/gradient_start_top" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray_stroke_depressed" />
                </shape>
            </item>
            <item android:top="@dimen/border" android:bottom="@dimen/border">
                <shape android:shape="rectangle">
                    <gradient android:startColor="@color/gray_mid_light" android:endColor="@color/gray_light_silver_divider" android:angle="@integer/gradient_start_top" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray_bubble_border" />
                </shape>
            </item>
            <item android:top="@dimen/border" android:bottom="@dimen/border">
                <shape android:shape="rectangle">
                    <gradient android:startColor="@android:color/white" android:endColor="@color/gray_businesspage_button_inactive_gradient_end" android:angle="@integer/gradient_start_top" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>